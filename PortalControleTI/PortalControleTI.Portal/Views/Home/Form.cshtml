@model PortalControleTI.Model.Computador

@{
    ViewBag.Title = "Computador";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>
                        Cadastro de Computadores
                    </h3>
                </div>
            </div>
            <div class="clearfix"></div>

            <form class="form-label-left input_mask">
                <div class="row">
                    <div class="col-md-6 ">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>
                                    Dados do Computador
                                </h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li>
                                        <a class="collapse-link">
                                            <i class="fa fa-chevron-up"></i>
                                        </a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <br />
                                <div class="form-group row">
                                    <div class="form-group has-feedback col-4">
                                        @Html.LabelFor(model => model.CT)
                                        @Html.EditorFor(model => model.CT, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                        @Html.ValidationMessageFor(model => model.CT, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group has-feedback col-8">
                                        @Html.LabelFor(model => model.Serial)
                                        @Html.EditorFor(model => model.Serial, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Serial, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="form-group has-feedback col-12">
                                        @Html.LabelFor(model => model.Fabricante)
                                        @Html.EditorFor(model => model.Fabricante, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Fabricante, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="form-group has-feedback col-12">
                                        @Html.LabelFor(model => model.Modelo)
                                        @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Modelo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="form-group has-feedback col-12">
                                        @Html.LabelFor(model => model.Processador)
                                        @Html.EditorFor(model => model.Processador, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.Processador, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="form-group has-feedback col-6">
                                        @Html.LabelFor(model => model.HD)
                                        @Html.EditorFor(model => model.HD, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.HD, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group has-feedback col-6">
                                        @Html.LabelFor(model => model.Memoria, "Memória")
                                        @Html.EditorFor(model => model.Memoria, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.Memoria, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="form-group has-feedback col-6">
                                        @Html.LabelFor(model => model.Tipo)
                                        @Html.EnumDropDownListFor(model => model.Tipo, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group has-feedback col-6">
                                        @Html.LabelFor(model => model.Status)
                                        @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 ">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>
                                    Dados Complementares
                                </h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li>
                                        <a class="collapse-link">
                                            <i class="fa fa-chevron-up"></i>
                                        </a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <br />
                                <div class="form-group row">
                                    <div class="form-group has-feedback col-6">
                                        @Html.LabelFor(model => model.Usuario, "Usuário")
                                        @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group has-feedback col-6">
                                        @Html.LabelFor(model => model.ComputerName, "Nome do Computador")
                                        @Html.EditorFor(model => model.ComputerName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ComputerName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="form-group has-feedback col-6">
                                        @Html.LabelFor(model => model.DataNfe, "Data NF")
                                        @Html.EditorFor(model => model.DataNfe, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                        @Html.ValidationMessageFor(model => model.DataNfe, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group has-feedback col-6">
                                        @Html.LabelFor(model => model.NFe, "Número da Nota Fiscal")
                                        @Html.EditorFor(model => model.NFe, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                        @Html.ValidationMessageFor(model => model.NFe, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="form-group has-feedback col-6">
                                        @Html.LabelFor(model => model.Local)
                                        @Html.EditorFor(model => model.Local, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Local, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group has-feedback col-6">
                                        @Html.LabelFor(model => model.DataAtualizacao, "Última Atualização")
                                        @Html.EditorFor(model => model.DataAtualizacao, new { htmlAttributes = new { @class = "form-control", @type = "date", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.DataAtualizacao, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="form-group has-feedback col-12">
                                        @Html.LabelFor(model => model.Obs)
                                        @Html.TextAreaFor(model => model.Obs, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Obs, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

            <div class="row">
                <div class="col-12">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
                    <input type="submit" value="Salvar" class="btn btn-success float-right" />
                </div>
            </div>
        </div>
    </div>
}