@model IEnumerable<PortalControleTI.Model.Computador>

@{
    ViewBag.Title = "Cadastro de Computadores";
}

@section css {
    <link href="cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
    @Styles.Render("~/Gentelella/DataTable/css")
}

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left"></div>

            <div class="title_right">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-btn">
                            <a href="@Url.Action("Form", "Home", new { serial = "0" })" class="btn btn-primary">
                                Novo Computador
                            </a>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>
                            Cadastro de Computadores
                        </h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>CT</th>
                                                <th>Modelo</th>
                                                <th>Serial</th>
                                                <th>Usuario</th>
                                                <th>Status</th>
                                                <th>Última Atualização</th>
                                                <th style="width: 10%">
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.CT</td>
                                                    <td>@item.Modelo</td>
                                                    <td>@item.Serial</td>
                                                    <td>@item.Usuario</td>
                                                    <td>@item.Status</td>
                                                    <td>@item.DataAtualizacao.ToShortDateString()</td>
                                                    <td class="project-actions text-right">
                                                        @*<a class="btn btn-primary btn-sm" href="#">
                                                                <i class="fa fa-folder">
                                                                </i>
                                                            </a>*@
                                                        <a class="btn btn-info btn-sm" href="@Url.Action("Form", "Home", new { serial = item.Serial })">
                                                            <i class="fa fa-edit">
                                                            </i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->

@section scripts {
    @Scripts.Render("~/Gentelella/DataTable/scripts")
}
